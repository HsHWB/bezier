<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huehn.sense.beziertouch.ui.MainActivity">

    <com.huehn.sense.beziertouch.view.BezierTouchView
        android:id="@+id/bezier_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFECEC"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/black"/>
    <com.huehn.sense.beziertouch.view.BezierTouchView
        android:id="@+id/bezier_quadto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#ECFFFF"/>

    <TextView
        android:id="@+id/bezier_love"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="爱心"/>

</RelativeLayout>
